<h2 class='text-center'>Productos</h2>
<% @products.each_slice(4) do |products| %>
    <div class="card-deck">
        <% products.each do |product| %>
            <div class='card'>
                <%= image_tag 'https://dummyimage.com/600x400/c7c7c7/737373&text=image', class:'card-img-top img-fluid' %>
                    <div class='card-body'>
                        <h5 class='card-title'><%= product.name %></h5>
                        <div class='card-text'>
                            <div class='badge badge-primary'><%= product.categories.name %></div>
                                <div>
                                    <%= number_to_currency product.price %>
                                </div>
                                <%= form_for :cart, url: cart_path, method: :put do |f| %>
                                    <%= f.hidden_field :product_id, value: product.id %>
                                    <%= f.hidden_field :quantity, value: 1 %>
                                    <%= f.submit "Add to cart", class:'btn btn-primary btn-sm float-right' %>
                                <% end %>
                                </div>
                            </div>        
                        </div>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
<% end %>
